@page
@model LoginModel

@{
    ViewData["Title"] = "";
}

<h1>@ViewData["Title"]</h1>

<!DOCTYPE html>
<html lang="pt-br">
<head>
	<title>Login V2</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">

	<link rel="icon" type="image/png" href="images/icons/favicon.ico"/>

	<link rel="stylesheet" type="text/css" href="~/vendor/bootstrap/css/bootstrap.min.css">

	<link rel="stylesheet" type="text/css" href="~/fonts/font-awesome-4.7.0/css/font-awesome.min.css">

	<link rel="stylesheet" type="text/css" href="~/fonts/iconic/css/material-design-iconic-font.min.css">

	<link rel="stylesheet" type="text/css" href="~/vendor/animate/animate.css">

	<link rel="stylesheet" type="text/css" href="~/vendor/css-hamburgers/hamburgers.min.css">

	<link rel="stylesheet" type="text/css" href="~/vendor/animsition/css/animsition.min.css">

	<link rel="stylesheet" type="text/css" href="~/vendor/select2/select2.min.css">

	<link rel="stylesheet" type="text/css" href="~/vendor/daterangepicker/daterangepicker.css">

	<link rel="stylesheet" type="text/css" href="~/css/util.css">
	<link rel="stylesheet" type="text/css" href="~/css/main.css">

</head>
<body>

	<div class="limiter">
		<div class="container-login100">
			<div class="wrap-login100">
				<section>
				<form id="account" method="post" class="login100-form validate-form">
					<div asp-validation-summary="All" class="text-danger"></div>
					<span class="login100-form-title p-b-26">
						Bem vindo
					</span>
					<span class="login100-form-title p-b-48">
						<i class="zmdi zmdi-font"></i>
					</span>

					<div class="wrap-input100 validate-input" data-validate = "Valid email is: a@b.c">
						<label asp-for="Input.Email" class="form-label"></label>
						<input asp-for="Input.Email" class="input100" autocomplete="username" aria-required="true" type="text">
						<span asp-validation-for="Input.Email" class="text-danger"></span>
						
					</div>

					<div class="wrap-input100 validate-input">
						<span class="btn-show-pass">
							<i class="zmdi zmdi-eye"></i>
						</span>
						<label asp-for="Input.Password" class="form-label">Senha</label>
						<input asp-for="Input.Password" class="input100" autocomplete="current-password" aria-required="true" type="password">
						<span asp-validation-for="Input.Password" class="text-danger"></span>
						
					</div>

					<div class="container-login100-form-btn">
						<div class="wrap-login100-form-btn">
							<div class="login100-form-bgbtn"></div>
							<button id="login-submit" type="submit" class="login100-form-btn">
								Entrar
							</button>
						</div>
					</div>

					<div class="text-center p-t-115">
						<span class="txt1">
							Não tem uma conta ?
						</span>

						<a class="txt2" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">
							Cadastre-se
						</a>
					</div>
				</form>

				</section>

				 <div class="col-md-6 col-md-offset-2">
        <section>
            
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div>
                        <p>
                            
                        </p>
                    </div>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div>
                            <p>
                                @foreach (var provider in Model.ExternalLogins)
                                {
                                    <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                }
                            </p>
                        </div>
                    </form>
                }
            }
        </section>
		
			</div>
		</div>
	</div>
	</div>
	
	
	

	<div id="dropDownSelect1"></div>
	
<!--===============================================================================================-->
	<script src="~/vendor/jquery/jquery-3.2.1.min.js"></script>
<!--===============================================================================================-->
	<script src="~/vendor/animsition/js/animsition.min.js"></script>
<!--===============================================================================================-->
	<script src="~/vendor/bootstrap/js/popper.js"></script>
	<script src="~/vendor/bootstrap/js/bootstrap.min.js"></script>
<!--===============================================================================================-->
	<script src="~/vendor/select2/select2.min.js"></script>
<!--===============================================================================================-->
	<script src="~/vendor/daterangepicker/moment.min.js"></script>
	<script src="~/vendor/daterangepicker/daterangepicker.js"></script>
<!--===============================================================================================-->
	<script src="~/vendor/countdowntime/countdowntime.js"></script>
<!--===============================================================================================-->
	<script src="~/js/main.js"></script>

</body>
</html>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />

}




