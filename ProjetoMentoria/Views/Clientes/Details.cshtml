@model ProjetoMentoria.ViewModels.ClienteViewModel
@{
    ViewData["Title"] = "Clientes";
}

<div class="row">
    <div class="card" style="width: 20rem;">
        <label>Perfil</label>
        <span class="border border-primary"></span>
  <img class="card-img-top" src="~/@Model.UrlImagem" alt="imagem">
  <span class="border border-primary"></span>
  <div class="card-body">
    <h5 class="card-title"></h5>
    
  <br />
  </div>
</div>
    <div class="col-md">
        <form asp-action="Details">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ClienteId" />

            <div class="card">
                <span class="border border-primary"></span>
                <div class="card-header"><h4>Dados Pessoais</h4></</div>
                <div class="card-body row">
                    <div class="col-md">
                        <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" disabled/>
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Idade" class="control-label"></label>
                <input asp-for="Idade" class="form-control" disabled />
                <span asp-validation-for="Idade" class="text-danger"></span>
            </div>
        
            <div class="form-group">
                <label asp-for="CPF" class="control-label"></label>
                <input asp-for="CPF" id="CPF" class="form-control" disabled />
                <span asp-validation-for="CPF" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CNPJ" class="control-label"></label>
                <input asp-for="CNPJ" id="CNPJ" class="form-control" disabled />
                <span asp-validation-for="CNPJ" class="text-danger"></span>
            </div>
                    </div>
                
            
            <div class="col-md">

                <div class="form-group">
                <label asp-for="RG" class="control-label"></label>
                <input asp-for="RG" class="form-control" disabled />
                <span asp-validation-for="RG" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Genero" class="control-label"></label>
                <select asp-for="Genero" class="form-select" disabled>
                <option disabled selected>--Selecione--</option>
                <option value="1">Masculino</option>
                    <option value="2">Feminino</option>
                    </select>
                <span asp-validation-for="Genero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefone" class="control-label"></label>
                <input asp-for="Telefone" id="Telefone" class="form-control" disabled />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" disabled/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            </div>

            </div>
            </div>
           <br />

            <div class="card">
                <span class="border border-primary"></span>
                <div class="card-header"><h4>Endereço</h4></div>
                    <div class="card-body row">

                         <div class="col-md">
                             <div class="form-group">
                <label asp-for="CEP" class="control-label"></label>
                <input asp-for="CEP" id="CEP" class="form-control" disabled/>
                <span asp-validation-for="CEP" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Logradouro" class="control-label"></label>
                <input asp-for="Logradouro" id="Logradouro" class="form-control" disabled/>
                <span asp-validation-for="Logradouro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Numero" class="control-label"></label>
                <input asp-for="Numero" class="form-control" disabled/>
                <span asp-validation-for="Numero" class="text-danger"></span>
            </div>
                         </div>
            <div class="col-md">
                <div class="form-group">
                <label asp-for="Bairro" class="control-label"></label>
                <input asp-for="Bairro" id="Bairro" class="form-control" disabled/>
                <span asp-validation-for="Bairro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cidade" class="control-label"></label>
                <input asp-for="Cidade" id="Cidade" class="form-control" disabled/>
                <span asp-validation-for="Cidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UF" class="control-label"></label>
                <input asp-for="UF" id="UF" class="form-control" disabled/>
                <span asp-validation-for="UF" class="text-danger"></span>
            </div>

            </div>
                    </div>
                
            </div>

            <div class="form-group mt-2">
                 <div class="col-md-3 offset-md-5">
                <a asp-action="Edit" asp-route-id="@Model?.ClienteId" class="btn btn-primary btn-lg"><i class="bi bi-pencil"></i>Editar</a>

                <a asp-action="Index" class="btn btn-secondary btn-lg"><i class="fa fa-arrow-circle-left"></i>Voltar</a>
                
            </div>
            </div>
        </form>
    </div>
</div>
