@model IEnumerable<ProjetoMentoria.ViewModels.ClienteViewModel>

@{
    ViewData["Title"] = "Clientes";
}

<p>
    <a asp-action="Create" class="btn btn-primary"><i class="far fa-plus-square"></i>Novo Cliente</a>
</p>

                       <form asp-controller="Clientes" asp-action="Index" method="get"
                        class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search">
                        <div class="input-group">
                            <input type="text" class="form-control bg-dark border-0 small" placeholder="Pesquisar por CPF" name="Pesquisa" 
                            aria-label="Search" aria-describedby="basic-addon2">
                            <input type="text" class="form-control bg-dark border-0 small" placeholder="Pesquisar por CNPJ" name="Cnpj" 
                            aria-label="Search" aria-describedby="basic-addon2">
                            <div class="input-group-append">
                                <button class="btn btn-primary" type="submit">
                                    <i class="fas fa-search fa-sm"></i>
                                    Pesquisar
                                </button>
                            </div>
                        </div>
                    </form>

<table class="table table-striped" id="table-cliente">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Idade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CPF)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CNPJ)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RG)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Idade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CPF)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CNPJ)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RG)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            
            <td>
                <a asp-action="Edit" asp-route-id="@item.ClienteId"><i class="bi bi-pencil"></i></a> 
                <a asp-action="Details" asp-route-id="@item.ClienteId"><i class="bi bi-eye"></i></a> 
                <a asp-action="Delete" asp-route-id="@item.ClienteId"><i class="bi bi-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
