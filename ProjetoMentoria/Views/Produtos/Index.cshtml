@model IEnumerable<ProjetoMentoria.ViewModels.ProdutoViewModel>

@{
    ViewData["Title"] = "Produtos";
}


<p>
    <a asp-action="Create" class="btn btn-primary"><i class="far fa-plus-square"></i>Novo Produto</a>
</p>
<table class="table table-striped" id="table-produto">
    <thead class="content">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Peso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Marca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Peso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProdutoId"><i class="bi bi-pencil"></i></a> 
                <a asp-action="Details" asp-route-id="@item.ProdutoId"><i class="bi bi-eye"></i></a> 
                <a asp-action="Delete" asp-route-id="@item.ProdutoId"><i class="bi bi-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>


       
          
